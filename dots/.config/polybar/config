;; Table of Contents 
;;  1. Colors
;;  2. Bar Defaults
;;  3. Modules
;;   a. i3
;;   b. network
;;   c. date
;;   d. pulseaudio
;;   e. battery
;;
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
;;
;; These settings were configured to work with 
;;  Arch Linux running i3 on an HP Envy x360.
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_


;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[colors]
include-file = ~/.config/polybar/colors

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[bar/default]
include-file = ~/.config/polybar/bar
monitor = ${env:SCREEN_NAME:HDMI-0}
width = ${env:POLYBAR_WIDTH:100%}
override-redirect = true
offset-x = 40
offset-y = 0

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[module/i3]
include-file = ~/.config/polybar/i3

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[module/network]
type = internal/network
interface = ${env:NETWORK_IFACE:wlp3s0}
interval = 1.0
accumulate-stats = true
unknown-as-up = true

; Left click opens nm if device is up
format-connected = %{A1:nm-connection-editor:} <ramp-signal> <label-connected> %{A}
label-connected = "%essid%  %local_ip%"

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

; Left click opens nm if device is down
format-disconnected = %{A1:nm-connection-editor:} <label-disconnected> %{A}
label-disconnected =  "Not Connected"
label-disconnected-foreground = ${colors.alert}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[module/date]
type = internal/date
interval = 5

time = %b %d %H:%M%

label = %time%
format = %{A1:google-chrome-stable 'calendar.google.com':} <label> %{A}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = %{A1:pavucontrol:} <ramp-volume> <label-volume> %{A}
label-muted =   Muted   
label-muted-foreground = ${colors.alert}


ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99  

poll-interval = 2
time-format = %H:%M

format-charging = <animation-charging>
format-discharging = <ramp-capacity>

label-full = ﮤ

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[settings]
screenchange-reload = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[global/wm]
margin-bottom = 0
