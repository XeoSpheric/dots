{
  // Window
  "window.menuBarVisibility": "hidden",
  "window.zoomLevel": 2,

  // Workbench
  "workbench.colorTheme": "Pitch Black",
  "workbench.editor.scrollToSwitchTabs": true,

  // Editor
  "editor.formatOnSave": true,
  "editor.fontFamily": "'Hack', 'Material Icons'",
  "editor.detectIndentation": true,
  "editor.rulers": [80, 100],
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.wordSeparators": " ()[]{}',\"`â”€_-",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": false
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust"
  },

  // Files
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },

  // Vim
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-d>": false
  },

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Sort Imports
  "typescript.extension.sortImports.pathSortOrder": [
    "package",
    "relativeUpLevel",
    "relativeDownLevel"
  ],
  "typescript.extension.sortImports.sortMethod": "path",
  "typescript.extension.sortImports.sortOnSave": false,
  "typescript.extension.sortImports.bracketWhitespace": false
}
